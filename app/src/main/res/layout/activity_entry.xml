<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entry">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background_color"
        android:scaleType="fitXY"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-64dp">

        <Button
            android:id="@+id/compute"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="54dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/ic_chec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subject" />

        <AutoCompleteTextView
            android:id="@+id/subject"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_classic"
            android:ems="10"
            android:fontFamily="@font/baloo"
            android:completionThreshold="1"
            android:hint="Book code or Book Name"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#202020"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/classes" />

        <TextView
            android:id="@+id/classes"
            android:layout_width="120dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baloo"
            android:text="search "
            android:textAllCaps="true"
            android:textColor="#202020"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="299dp"
            android:layout_height="365dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/backie"
            android:padding="10dp"
            android:hint="No result"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compute" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>